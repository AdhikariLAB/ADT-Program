#Configuration file to parsed by the ADT program for running the molpro

#Info for running molpro
[molInfo]
scrdir = /tmp/adtprogram
memory = 100,m



#Info for energy calculation
[eInfo]
method = multi
basis  = 6-31G**
cas    = occ,19;closed,11
wf     = 31,1,1,0
state  = 5


#Info for NACT calculation
[nInfo]
method = cpmcscf
basis  = 6-31G**




#Info for varying modes, put the indexes of the modes that will be varying
[mInfo]
varying = 5,6


[gInfo]
# NOTE: for spectroscopic its rho, phi but for scattering its theta, phi
firstgrid  = 0.1, 5.0, 0.1 
secondgrid = 1, 181, 2

# following options are only required for ddr nact calculation
# ignore/remove them for analytical calculation
df = .001
ds = .02
